<%- include('header.ejs') %>
<link rel="stylesheet" href="css/land-post.css">
<style>
        tr {
                cursor: pointer;
        }
</style>

<body>
        <div class="mainContainer">
                <div class="formOutContainer">
                        <div class="formInContainer">
                                <form action="search" method="POST">
                                        <div class="mainFormContainer">
                                                <div class="leftFormContainer">
                                                        <label>Search filters</label>
                                                </div>
                                                <div class="rightFormContainer">
                                                        <button type="submit" class="btn btn-primary">Apply</button>
                                                </div>
                                                <div style="clear: both;"> </div>
                                        </div>
                                        <div class="mainFormContainer">
                                                <div class="leftFormContainer">
                                                        <label>Price filter</label>
                                                        <div class="form-check">
                                                                <input class="form-check-input" type="radio"
                                                                        name="priceRadios" id="$0-$100" value="1">
                                                                <label class="form-check-label" for="$0-$100">
                                                                        $0-$100
                                                                </label>
                                                        </div>
                                                        <div class="form-check">
                                                                <input class="form-check-input" type="radio"
                                                                        name="priceRadios" id="$100-$500" value="2">
                                                                <label class="form-check-label" for="$100-$500">
                                                                        $100-$500
                                                                </label>
                                                        </div>
                                                        <div class="form-check">

                                                                <input class="form-check-input" type="radio"
                                                                        name="priceRadios" id="$500-$1000" value="3">
                                                                <label class="form-check-label" for="$500-$1000">
                                                                        $500-$1000
                                                                </label>
                                                        </div>
                                                        <div class="form-check">
                                                                <input class="form-check-input" type="radio"
                                                                        name="priceRadios" id="Above $1000" value="4">
                                                                <label class="form-check-label" for="Above $1000">
                                                                        Above $1000
                                                                </label>
                                                        </div>

                                                </div>

                                                <div style="clear: both;"> </div>
                                                <div class="form-group">
                                                        <label for="location"> Title </label>
                                                        <input type="text" name="title" class="form-control"
                                                                id="location" placeholder="Enter post title here">
                                                </div>
                                        </div>
                                </form>
                        </div>
                </div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />

        <table class="table table-striped">
                <div class="leftFormContainer">
                        <label>Land Posts</label>
                </div>
                <thead>
                        <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col">Price</th>
                                <th scope="col">Location</th>
                        </tr>
                </thead>
                <tbody>

                        <% for(var i=0; i < data[0].length; i++) { %>
                        <tr onclick="window.location='/land/<%= data[0][i].id %>'">
                                <td><%= data[0][i].title%></td>
                                <td><%= data[0][i].description%></td>
                                <td><%= data[0][i].rent%></td>
                                <td><%= data[0][i].location %></td>
                        </tr>
                        <% } %>
        </table>
        <br><br>
        <>
                <table class="table table-striped">
                        <div class="leftFormContainer">
                                <label>Machine Posts</label>
                        </div>

                        <thead>
                                <tr>
                                        <th scope="col">Title</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Price</th>
                                </tr>
                        </thead>
                        <tbody>

                                <% for(var i=0; i < data[1].length; i++) { %>
                                <tr onclick="window.location='/machine/<%= data[1][i].id%>'">
                                        <td> <%= data[1][i].title%></td>
                                        <td> <%= data[1][i].description%></td>
                                        <td> <%= data[1][i].rent%></td>
                                </tr>
                                <% } %>
                </table>
                <br><br>
</body>
<%- include('footer.ejs') %>